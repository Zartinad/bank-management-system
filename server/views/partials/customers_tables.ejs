<div class="table-wrapper">
    <% if (customers.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Customer ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach((client, index) => { %>
                    <tr>
                        <th scope="row"><%= client.id %></th>
                        <td><%= client.first_name %></td>
                        <td><%= client.last_name %></td>
                        <td>
                            <a href="/edit/<%= client.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">View</a>
                            <a href="/delete/<%= client.id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No transactions found. Go <a href="/add" >here</a> to add players.</p>
    <% } %>
</div>
